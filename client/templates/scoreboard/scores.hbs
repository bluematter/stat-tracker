<!-- timeouts for each team -->
<div class="team-timeouts">
	<div class="timeout-circle add-timeout"></div>
	<div class="timeout-circle add-timeout"></div>
</div>

<!-- score for each team -->
<div class="scoreboard-points editable" style="border-color: {{team_color}};display: inline-block;" contenteditable="true">
    {{points}}
</div>

<!-- team fouls for each team -->
<div class="team-fouls">
    {{#foulCount fouls}}
        <div style="" class="foul-circle add-foul"></div>
    {{/foulCount}}
    <span class="bonus true">bonus</span>
</div>

