<div id="fullBg" />

<div class="center-login">
    <div class="container">
      
        <!-- show any messages that come back with authentication -->
        {{#if message.length}}
            <div class="alert alert-danger">{{message}}</div>
        {{/if}} 

        <form class="form-signin" action="/login" method="post"> 
          
          <h1 class="form-signin-heading"> Sign in </h1>

          <img class="profile-img" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" alt="">
          
          {{#if user}}
            <p>{{user}}</p>
            <input type="hidden" name="email" value="{{user}}" />
          {{else}}
            <input type="text" class="form-control" name="email" placeholder="Email" required="" autofocus="" />
          {{/if}}

          <input type="password" class="form-control" name="password" placeholder="Password" required=""/>  

          <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button> 
          
          <div class="remember">
            {{#if user}}
              <input type="checkbox" name="remember_me" checked/>
            {{else}}
              <input type="checkbox" name="remember_me"/>
            {{/if}}
            <span>Remember Me</span>
          </div>

          <button class="btn fb btn-lg btn-primary btn-block" type="submit">Sign in via Facebook</button> 

        </form>

        <p class="text-center sign-up"><strong>Sign up</strong> for a new account</p>

    </div>
</div>